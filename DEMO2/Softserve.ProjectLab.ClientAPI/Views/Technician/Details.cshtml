@model Softserve.ProjectLab.ClientAPI.Models.TechnicianDetails

@{
	ViewData["Title"] = "View";
}

<section style="margin-bottom:2rem;">
	<h1>Technician Details</h1>
	<a asp-action="List">Back to List</a>

	<h4 style="margin-top:1rem;">
		@Html.DisplayFor(model => model.Technician)
	</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.TechnicianId)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.TechnicianId)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Technician)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Technician)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Address)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address)
		</dd>
	</dl>
</section>

<section>
	<h4>Technician's Work Orders</h4>
	<hr />
	<div style="height:40vh; overflow:auto; border-radius:10px;">
		<table class="table" id="workOrdersTable">
			<thead style="position:sticky; background-color: #f0f0f0; top: 0px; border:0px solid">
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.WorkOrders[0].WorkOrderName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.WorkOrders[0].WorkType)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.WorkOrders[0].Status)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.WorkOrders[0].StartTime)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.WorkOrders[0].EndTime)
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.WorkOrders)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.WorkOrderName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.WorkType)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Status)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.StartTime)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.EndTime)
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</section>
